{% extends 'base.html.twig' %}
{% block title %}Newsletter creation{% endblock %}

{% block body %}
    <h1>Write your newsletter</h1>
    {{form_start(form)}}
        {{form_row(form.name)}}
        <div id="editor"></div>
        {{form_row(form.content)}}
        {{form_row(form.categories)}}
    {{form_end(form)}}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('ckeditor5/ckeditor.js') }}" defer></script>
    <script src="{{ asset('js/ckeditor.js') }}" defer></script>
{% endblock %}