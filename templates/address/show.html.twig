{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
    <h1>Address</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
             <tr>
                <th>Full Name</th>
                <td>{{ address.firstName}}{{ address.lastName}}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ address.address }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ address.codePostal }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ address.country }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ address.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_account') }}">Retour page compte</a>

    <a href="{{ path('address_edit', {'id': address.id}) }}">Modifier</a>

    {{ include('address/_delete_form.html.twig') }}
{% endblock %}